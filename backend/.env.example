# Rate Limiting Configuration
# Enable/disable rate limiting globally
RATE_LIMIT_ENABLED=true

# Default rate limit for most endpoints
RATE_LIMIT_DEFAULT=100/minute

# Strict rate limit for authentication endpoints
RATE_LIMIT_AUTH=5/minute

# Strict rate limit for write operations
RATE_LIMIT_STRICT=10/minute

# Relaxed rate limit for health checks and read-only endpoints
RATE_LIMIT_RELAXED=1000/hour

# Rate limit for container operations (start/stop/restart)
RATE_LIMIT_CONTAINER_OPS=60/minute

# Rate limit for image operations (pull/delete)
RATE_LIMIT_IMAGE_OPS=10/hour

# Rate limit for system operations (prune)
RATE_LIMIT_SYSTEM_OPS=5/hour

# Feature Flags for Refactored Code
# Set to true to enable new implementations

# Enable new WebSocket handler with reduced complexity
FEATURE_USE_NEW_WEBSOCKET_HANDLER=false

# Enable centralized permission service
FEATURE_USE_PERMISSION_SERVICE=false

# Enable new container stats calculator
FEATURE_USE_CONTAINER_STATS_CALCULATOR=false

# Enable decorator pattern for endpoints
FEATURE_USE_DECORATOR_PATTERN=false

# Enable new log buffer service
FEATURE_USE_LOG_BUFFER_SERVICE=false